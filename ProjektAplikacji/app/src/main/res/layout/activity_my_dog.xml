<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:background="@color/colorBackground"
        tools:context=".dog.MyDogActivity">

    <TextView
            android:id="@+id/tv_dog_name"
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="35dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="48dp"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Dzienne zapotrzebowanie:"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"
    />

    <TextView
            android:id="@+id/tv_dog_calories"
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="103dp"
            tools:layout_editor_absoluteX="48dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="15dp"

        />


    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Gram wybranej karmy na dzieÅ„:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"

        />
    <Spinner android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_food"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="5dp"

        >
    </Spinner>
    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/tv_grams_of_food"
        android:textSize="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="15dp"


        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_dog_diary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        />
        </LinearLayout>